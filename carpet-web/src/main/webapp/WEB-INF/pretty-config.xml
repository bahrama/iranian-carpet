<pretty-config
	xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">


	<url-mapping id="view1">
		<pattern value="/products/#{page}" />
		<view-id value="/pages/product-list.xhtml" />
	</url-mapping>

	<url-mapping id="view2">
		<pattern value="/products/#{page}/#{productType}" />
		<view-id value="/pages/product-list.xhtml" />
	</url-mapping>

	<url-mapping id="view3">
		<pattern value="/products/#{page}/#{productType}/#{subProductType}" />
		<view-id value="/pages/product-list.xhtml" />
	</url-mapping>


	<url-mapping id="view4">
		<pattern value="/blogs/#{page}" />
		<view-id value="/pages/blog-list.xhtml" />
	</url-mapping>

	<url-mapping id="view5">
		<pattern value="/blogs/#{page}/#{blogType}" />
		<view-id value="/pages/blog-list.xhtml" />
	</url-mapping>

	<url-mapping id="view6">
		<pattern value="/blog/#{id}/#{name}" />
		<view-id value="/pages/blog-detail.xhtml" />
	</url-mapping>

	<url-mapping id="view7">
		<pattern value="/product/#{code}/#{name}" />
		<view-id value="/pages/product-detail.xhtml" />
	</url-mapping>
</pretty-config>